{
    "name": "deuxhuithuit/craft-routes-api",
	"description": "Adds a controller to generate a routes config file.",
    "type": "craft-plugin",
	"version": "2.1.1",
    "license": "MIT",
	"authors": [
		{
			"name": "Deux Huit Huit",
			"homepage": "https://deuxhuithuit.com"
		}
	],
	"support": {
		"email": "open-source@deuxhuithuit.com",
		"issues": "https://github.com/DeuxHuitHuit/craft-routes-api/issues?state=open",
		"source": "https://github.com/DeuxHuitHuit/craft-routes-api",
		"docs": "https://github.com/DeuxHuitHuit/craft-routes-api/blob/main/README.md"
	},
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.5.0|^5.0.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "deuxhuithuit\\routesapi\\": "src/"
        }
    },
    "extra": {
        "handle": "routes-api",
        "name": "Routes API",
		"hasCpSettings": false
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
